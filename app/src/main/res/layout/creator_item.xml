<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha=".9"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/creator_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="comic cover" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/creator_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:text="Jack Kirby" />

        <TextView
            android:id="@+id/creator_events_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Works include"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/creator_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="5"
            android:textColor="#ffffff"
            tools:text="Civil war\nHouse of M\nCaptain America" />

        <Button
            android:id="@+id/open_comics_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="8dp"
            android:background="#000000"
            android:focusable="false"
            android:text="View all comics"
            android:textColor="@android:color/holo_orange_light"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>